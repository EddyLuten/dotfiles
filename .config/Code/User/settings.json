{
    "editor.fontFamily": "'JetBrains Mono', sans-serif",
    "editor.fontSize": 16,
    "editor.fontLigatures": false,
    "editor.renderWhitespace": "all",
    "editor.detectIndentation": true,
    "editor.rulers": [
        80,
        100,
        120
    ],
    "editor.formatOnSave": false,
    "extensions.ignoreRecommendations": false,
    "editor.selectionClipboard": false,
    "[markdown]": {
        "editor.wordWrap": "bounded",
        "editor.wordWrapColumn": 100,
        "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
    },
    "open-in-browser.default": "firefox",
    // C++
    "clang-format.executable": "clang-format-9",
    "clang.executable": "clang-9",
    "[cpp]": {
        // "editor.wordBasedSuggestions": false
    },
    "[rust]": {
        "editor.formatOnSave": true,
    },
    // Terminal Config
    "terminal.integrated.fontFamily": "'JetBrains Mono', sans-serif",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.rendererType": "auto",
    "terminal.integrated.defaultProfile.linux": "zsh",
    // JS Specific Config
    "js/ts.implicitProjectConfig.experimentalDecorators": true,
    "autoimport.doubleQuotes": false,
    "[javascript]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[typescript]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // Zen Mode config
    "zenMode.centerLayout": true,
    "zenMode.fullScreen": true,
    "zenMode.restore": true,
    "zenMode.hideActivityBar": true,
    // Macros
    "macros": {},
    "gitlens.views.fileHistory.avatars": false,
    "workbench.startupEditor": "newUntitledFile",
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    // Python
    "python.jediEnabled": false,
    "python.pythonPath": "python3",
    // PHP
    "php.suggest.basic": false,
    "php-cs-fixer.executablePath": "${extensionPath}/php-cs-fixer.phar",
    "php-cs-fixer.lastDownload": 1624566737216,
    // XML Tools
    "xmlTools.enableXmlTreeView": true,
    "xmlTools.enableXmlTreeViewMetadata": true,
    "xmlTools.enableXmlTreeViewCursorSync": true,
    "python.defaultInterpreterPath": "python3",
    "editor.inlineSuggest.enabled": true,
    "[python]": {
        "editor.formatOnType": true
    },
    "workbench.iconTheme": "Monokai Pro Icons",
    "explorer.confirmDelete": false,
    "workbench.colorTheme": "Monokai Pro",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "git.autofetch": true,
    "rust-analyzer.inlayHints.parameterHints.enable": false,
    "rust-analyzer.inlayHints.chainingHints.enable": false,
    "rust-analyzer.inlayHints.typeHints.enable": false,
    "redhat.telemetry.enabled": false,
    "vsicons.dontShowNewVersionMessage": true,
    "[csharp]": {
        "editor.maxTokenizationLineLength": 2500,
        // disables inline references
        "editor.codeLens": false,
        "editor.defaultFormatter": "csharpier.csharpier-vscode",
    },
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "zig.zls.path": "/home/eddy/.config/Code/User/globalStorage/ziglang.vscode-zig/zls_install/zls",
    "debug.onTaskErrors": "abort",
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "cmake.configureOnOpen": false,
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[css]": {
        "editor.defaultFormatter": "vscode.css-language-features"
    },
    "window.zoomLevel": 1,
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
    "cmake.showOptionsMovedNotification": false,
    "explorer.confirmDragAndDrop": false,
    "gitlens.defaultDateStyle": "absolute",
    "gitlens.defaultDateLocale": null,
    "gitlens.defaultDateFormat": "YYYY-MM-DDTHH:mm",
    "gitlens.defaultDateShortFormat": null,
    "security.workspace.trust.untrustedFiles": "open",
}