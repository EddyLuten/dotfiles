{
    "window.zoomLevel": 2,
    "editor.fontFamily": "'JetBrains Mono', sans-serif",
    "editor.fontSize": 16,
    "editor.fontLigatures": false,
    "editor.renderWhitespace": "all",
    "editor.detectIndentation": true,
    "editor.rulers": [80, 100, 120],
    "extensions.ignoreRecommendations": false,

    "[markdown]": {
        "editor.wordWrap": "bounded",
        "editor.wordWrapColumn": 80
    },

    "open-in-browser.default": "firefox",

    // C++
    "clang-format.executable": "clang-format-9",
    "clang.executable": "clang-9",
    "[cpp]": {
        // "editor.wordBasedSuggestions": false
    },

    // Terminal Config
    "terminal.integrated.fontFamily": "'JetBrains Mono', sans-serif",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.rendererType": "auto",
    "terminal.integrated.defaultProfile.linux": "zsh",
    
    // JS Specific Config
    "js/ts.implicitProjectConfig.experimentalDecorators": true,
    "autoimport.doubleQuotes": false,

    // Zen Mode config
    "zenMode.centerLayout": true,
    "zenMode.fullScreen": true,
    "zenMode.restore": true,
    "zenMode.hideActivityBar": true,

    // Macros
    "macros": {
    },
    "gitlens.views.fileHistory.avatars": false,
    "workbench.startupEditor": "newUntitledFile",
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    // Python
    "python.jediEnabled": false,
    "python.pythonPath": "python3",

    // PHP
    "php.suggest.basic": false,
    "php-cs-fixer.executablePath": "${extensionPath}/php-cs-fixer.phar",
    "php-cs-fixer.lastDownload": 1624566737216,

    // XML Tools
    "xmlTools.enableXmlTreeView": true,
    "xmlTools.enableXmlTreeViewMetadata": true,
    "xmlTools.enableXmlTreeViewCursorSync": true,
    "editor.inlineSuggest.enabled": true,
    "[python]": {
        "editor.formatOnType": true
    },
    "workbench.iconTheme": "vscode-icons",
    "explorer.confirmDelete": false,
    "workbench.colorTheme": "Monokai Pro (Filter Octagon)",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "git.autofetch": true,
    "vscord.app.name": "Visual Studio Code",

    "rust-analyzer.inlayHints.parameterHints.enable": false,
    "rust-analyzer.inlayHints.chainingHints.enable": false,
    "rust-analyzer.inlayHints.typeHints.enable": false,
    "redhat.telemetry.enabled": false,
    "vsicons.dontShowNewVersionMessage": true,
    "[csharp]": {
        "editor.maxTokenizationLineLength": 2500,
        // disables inline references
        "editor.codeLens": false,
    },
    "git.confirmSync": false,
}