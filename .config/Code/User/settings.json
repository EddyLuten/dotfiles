{
    // Editor Config
    "editor.fontFamily": "'JetBrains Mono', sans-serif",
    "editor.fontSize": 20,
    "editor.fontLigatures": false,
    "editor.renderWhitespace": "all",
    "editor.detectIndentation": true,
    "editor.rulers": [80, 100, 120],
    "extensions.ignoreRecommendations": false,
    "window.zoomLevel": 0,

    // C++
    "clang-format.executable": "clang-format-9",
    "clang.executable": "clang-9",
    "[cpp]": {
        // "editor.wordBasedSuggestions": false
    },

    // Terminal Config
    "terminal.integrated.fontFamily": "JetBrains Mono",
    "terminal.integrated.rendererType": "auto",
    
    // JS Specific Config
    "javascript.implicitProjectConfig.experimentalDecorators": true,

    // Zen Mode config
    "zenMode.centerLayout": true,
    "zenMode.fullScreen": true,
    "zenMode.restore": true,
    "zenMode.hideActivityBar": true,

    // Macros
    "macros": {
    },
    "gitlens.views.fileHistory.avatars": false,
    "workbench.startupEditor": "newUntitledFile",
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    // Python
    "python.jediEnabled": false,
    "python.pythonPath": "python3",

    // PHP
    "php.suggest.basic": false,
    "php-cs-fixer.executablePath": "${extensionPath}/php-cs-fixer.phar",
    "php-cs-fixer.lastDownload": 1605039237477,

    // XML Tools
    "xmlTools.enableXmlTreeView": true,
    "xmlTools.enableXmlTreeViewMetadata": true,
    "xmlTools.enableXmlTreeViewCursorSync": true
}